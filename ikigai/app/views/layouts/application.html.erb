<!DOCTYPE html>
<html>
<head>
  <title>Ikigai</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="container">
  <div id="header">
  <% if flash[:notice] %>
    <p id="notice"><%= flash[:notice] %></p>
    <% flash.discard(:notice) %>
  <% end %>
  <% if flash[:alert] %>
    <p id="alert"><%= flash[:alert] %></p>
    <% flash.discard(:alert) %>
  <% end %>

<%= yield %>

</body>
</html>
